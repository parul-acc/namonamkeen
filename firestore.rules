rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is Admin
    // (Ensure your admin emails are set in Custom Claims or check strictly here)
    // For simple apps, we often restrict writes to specific UIDs or email matches
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.email == "namonamkeens@gmail.com" || 
         request.auth.token.email == "parul19.accenture@gmail.com");
    }

    // 1. Products: Public Read, Admin Write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 2. Orders: Users create/read own, Admin read/write all
    match /orders/{orderId} {
      allow create: if request.auth != null; // Only logged in users
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow update, delete: if isAdmin();
    }

    // 3. Users: Owner can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow admin to read/write any user (for customer management)
      allow read, write: if isAdmin();
      
      match /wallet_history/{historyId} {
         allow read: if request.auth != null && request.auth.uid == userId;
         allow write: if isAdmin(); // Only admin/system credits wallet
      }
      
      match /notifications/{notifId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 4. Coupons & Settings: Public Read, Admin Write
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 5. Reviews: Public Read, Auth Create, Admin Update
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }
    
    // 6. Internal Admin Collections
    match /expenses/{docId} { allow read, write: if isAdmin(); }
    match /inventory_logs/{docId} { allow read, write: if isAdmin(); }
    match /stock_alerts/{docId} { allow read, write: if isAdmin(); }
    match /restockAlerts/{docId} { allow read, write: if isAdmin(); }
    match /admin_notifications/{docId} { allow read, write: if isAdmin(); }
    match /admin_tokens/{docId} { allow read, write: if isAdmin(); }
    match /productAnalytics/{docId} { allow read, write: if isAdmin(); }
    match /customerAnalytics/{docId} { allow read, write: if isAdmin(); }
    match /blogs/{blogId} { allow read: if true; allow write: if isAdmin(); }
    
    // 7. OTPs: No public access (Handled by Cloud Functions)
    match /otps/{mobile} {
      allow read, write: if false; 
    }
  }
}