rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    // 1. Check if user is a verified Admin
    function isAdmin() {
      return request.auth != null && (
        // Legacy Hardcoded List
        request.auth.token.email in ['parul19.accenture@gmail.com', 'namonamkeens@gmail.com', 'soramjain2297@gmail.com', 'ajmera.nidhishree@gmail.com']
        ||
        // Dynamic DB Role (User Doc has role: 'admin')
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
    }

    // 2. Check if user is logged in
    function isAuth() {
      return request.auth != null;
    }

    // 3. Check if user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    // 1. PRODUCTS & INVENTORY
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin() && 
                   request.resource.data.price is number && 
                   request.resource.data.price >= 0;
    }
    
    // Inventory collection (used by functions/admin)
    match /inventory/{productId} {
      allow read, write: if isAdmin();
    }

    // 2. ORDERS
    match /orders/{orderId} {
      // Allow Create: Guest or Auth, but validate keys
      allow create: if (isAuth() || true) && 
                    request.resource.data.total is number && 
                    request.resource.data.total >= 0 &&
                    request.resource.data.items is list;
      
      allow read: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid);
      allow update: if isAdmin() || (isAuth() && resource.data.userId == request.auth.uid && request.resource.data.status == 'Cancelled'); // Allow user to cancel if you have that feature
      allow delete: if isAdmin();
    }

    // 3. USERS & PROFILES
    match /users/{userId} {
      allow create: if true;
      allow read, update: if isOwner(userId) || isAdmin();
      
      match /wallet_history/{docId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); 
      }
      match /notifications/{docId} {
        allow read, write: if isOwner(userId); // Users need write to mark as read
      }
    }

    // 4. REVIEWS
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuth();
      allow update, delete: if isAdmin();
    }

    // 5. COUPONS
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. SETTINGS
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 7. BLOGS
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 8. CUSTOMER STOCK REQUESTS ("Notify Me")
    match /stock_alerts/{alertId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }

    // --- MISSING RULES FIXED BELOW ---

    // 9. ADMIN RESTOCK ALERTS (Fixes "Error loading stock alerts")
    // Accessed by inventory-alerts.js
    match /restockAlerts/{docId} {
      allow read, write: if isAdmin();
    }

    // 10. ANALYTICS COLLECTIONS (Fixes "Error loading enhanced dashboard")
    // Accessed by analytics-dashboard.js
    match /customerAnalytics/{docId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions write here
    }
    
    match /productAnalytics/{docId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions write here
    }

    // 11. STOCK HISTORY LOGS
    match /stockHistory/{docId} {
      allow read: if isAdmin();
      allow write: if false; 
    }

    // 12. ADMIN INTERNAL COLLECTIONS
    match /expenses/{docId} {
      allow read, write: if isAdmin();
    }
    match /inventory_logs/{docId} {
      allow read, write: if isAdmin();
    }
    match /admin_tokens/{docId} {
      allow read, write: if isAdmin();
    }
    match /admin_notifications/{docId} {
      allow read, write: if isAdmin();
    }
    
    // 13. OTPS (Secure)
    match /otps/{mobile} {
      allow read, write: if false; // Only accessed by Cloud Functions
    }
  }
}